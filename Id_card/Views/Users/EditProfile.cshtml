@model Id_card.Models.Users
@{
    ViewData["Title"] = "Edit Profile";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Edit Profile</h2>
        <div>
            <a asp-controller="Users" asp-action="Profile" class="btn btn-secondary btn-sm">Cancel</a>
        </div>
    </div>

    <form asp-action="EditProfile" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="UserId" />
        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label">Full Name</label>
                <input asp-for="FullName" class="form-control" />
            </div>
            <div class="col-md-6">
                <label class="form-label">Email</label>
                <input asp-for="Email" class="form-control" readonly />
                <input type="hidden" asp-for="PasswordHash" />
            </div>
            <div class="col-md-6">
                <label class="form-label">Mobile No</label>
                <input asp-for="MobileNo" class="form-control" />
            </div>
            <div class="col-md-6">
                <label class="form-label">Profile Image</label>
                <input type="file" name="imageFile" class="form-control" accept="image/*" />
                @if (!string.IsNullOrEmpty(Model.Image))
                {
                    <div class="mt-2">
                        <img src="@Model.Image" alt="Profile Image" style="height:80px;" />
                    </div>
                }
            </div>

            <div class="col-12"><hr /></div>

            <div class="col-md-3">
                <label class="form-label">House No</label>
                <input asp-for="Address.HouseNo" class="form-control" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Street</label>
                <input asp-for="Address.Street" class="form-control" />
            </div>
            <div class="col-md-3">
                <label class="form-label">City</label>
                <input asp-for="Address.City" class="form-control" />
            </div>
            <div class="col-md-3">
                <label class="form-label">State</label>
                <input asp-for="Address.State" class="form-control" />
            </div>
            <div class="col-md-6">
                <label class="form-label">Country</label>
                <input asp-for="Address.Country" class="form-control" />
            </div>
            <div class="col-md-6">
                <label class="form-label">Pincode</label>
                <input asp-for="Address.Pincode" class="form-control" />
            </div>

            <div class="col-12">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </div>
    </form>
</div>


