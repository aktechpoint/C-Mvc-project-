@model IEnumerable<Id_card.Models.Employees>
@{
    ViewData["Title"] = "Employee List";
    var listType = ViewBag.ListType?.ToString() ?? "total";
    var title = listType switch
    {
        "total" => "All Employees",
        "generated" => "Employees with Generated ID Cards",
        "active" => "Active Employees",
        "inactive" => "Inactive Employees",
        "emailsent" => "Employees with Emails Sent",
        _ => "Employees"
    };
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>@title</h2>
        <div>
            <a asp-controller="Dashboard" asp-action="Index" class="btn btn-secondary btn-sm">Back to Dashboard</a>
        </div>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Photo</th>
                            <th>Name</th>
                            <th>Department</th>
                            <th>Designation</th>
                            <th>Mobile</th>
                            <th>Email</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var employee in Model)
                        {
                            <tr>
                                <td>@employee.EmployeeId</td>
                                <td>
                                    <img src="@(!string.IsNullOrEmpty(employee.Image) ? employee.Image : "/favicon.ico")" 
                                         alt="Photo" style="height:40px;width:40px;object-fit:cover;border-radius:50%;" />
                                </td>
                                <td>@employee.Name</td>
                                <td>@employee.Department</td>
                                <td>@employee.Designation</td>
                                <td>@employee.MobileNo</td>
                                <td>@employee.Email</td>
                                <td>
                                    <span class="badge @(employee.PrintedStatus ? "bg-success" : "bg-warning")">
                                        @(employee.PrintedStatus ? "Printed" : "Not Printed")
                                    </span>
                                    @if (employee.SentOnMailStatus)
                                    {
                                        <span class="badge bg-info">Email Sent</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-controller="IdCard" asp-action="Pdf" asp-route-id="@employee.EmployeeId" 
                                           class="btn btn-primary btn-sm" target="_blank" title="Generate PDF">
                                            <i class="fas fa-file-pdf"></i>
                                        </a>
                                        <form asp-controller="IdCard" asp-action="Email" asp-route-id="@employee.EmployeeId" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-info btn-sm" title="Send Email">
                                            <i class="fas fa-envelope"></i>
                                            </button>
                                        </form>
                                        <button type="button" class="btn btn-success btn-sm" onclick="shareWhatsApp(@employee.EmployeeId)" title="Share on WhatsApp">
                                            <i class="fab fa-whatsapp"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                <div class="text-center py-4">
                    <p class="text-muted">No employees found for this category.</p>
                </div>
            }
        </div>
    </div>
</div>

@* Font Awesome is already included in _Layout; duplicate include removed *@

<script>
    function shareWhatsApp(employeeId) {
        fetch('@Url.Action("GetWhatsAppLink", "Dashboard")' + '?id=' + employeeId)
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    window.open(data.url, '_blank');
                } else {
                    alert('Error: ' + data.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Error sharing on WhatsApp');
            });
    }
</script>
